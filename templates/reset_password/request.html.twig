{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        {% for flashError in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        <div class="card-header mb-3">Reset your password</div>
                        {{ form_start(requestForm) }}
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                <div class="card-header mb-3"><small><i>
                                            Enter your email address and we we will send you a
                                            link to reset your password.</i>
                                    </small></div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i> Send
                                </button>
                            </div>
                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}